CREATE TABLE CUSTOMER(
C_id INT PRIMARY KEY, 
C_name VARCHAR(50),
phone_no INT,
amount INT
);

CREATE TABLE ORDER1(
O_id INT, 
O_name VARCHAR(50), 
O_date DATE NOT NULL,
C_id INT,
CONSTRAINT abc PRIMARY KEY(O_id), 
CONSTRAINT xyz FOREIGN KEY(C_id) REFERENCES CUSTOMER(C_id)
);

