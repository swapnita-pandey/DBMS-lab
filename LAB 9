ALTER TABLE ORDER1
DROP CONSTRAINT xyz;

DELETE FROM CUSTOMER
WHERE C_id = 12;

DELETE FROM ORDER1
WHERE C_id = 14;

//LEFT OUTER JOIN
?? RIGHT OUTER JOIN

SELECT CUSTOMER.C_id, ORDER1.O_id, CUSTOMER.C_name FROM CUSTOMER
JOIN ORDER1 ON CUSTOMER.C_id = ORDER1.C_id;                               // Natural join, no condition

SELECT CUSTOMER.C_id, ORDER1.O_id, CUSTOMER.C_name FROM CUSTOMER
INNER JOIN ORDER1 ON CUSTOMER.C_id = ORDER1.C_id;                          // This is also natural join.

SELECT CUSTOMER.C_id, ORDER1.O_id, CUSTOMER.C_name FROM CUSTOMER
LEFT JOIN ORDER1 ON CUSTOMER.C_id = ORDER1.C_id;

SELECT CUSTOMER.C_id, ORDER1.O_id, CUSTOMER.C_name FROM CUSTOMER
RIGHT JOIN ORDER1 ON CUSTOMER.C_id = ORDER1.C_id;

SELECT CUSTOMER.C_id, ORDER1.O_id, CUSTOMER.C_name FROM CUSTOMER
FULL JOIN ORDER1 ON CUSTOMER.C_id = ORDER1.C_id;

