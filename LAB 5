SELECT AVG(salary) AS Avg_Salary FROM EMPLOYEE;       //22

CREATE VIEW name AS
SELECT Ename FROM EMPLOYEE;

ALTER TABLE EMPLOYEE ADD( city VARCHAR(20));

UPDATE EMPLOYEE
SET city = 'ddn' WHERE EmpId = '14';

UPDATE EMPLOYEE
SET city = 'ddn' WHERE EmpId = '16';

UPDATE EMPLOYEE
SET city = 'Kashipur' WHERE EmpId = '17';

UPDATE EMPLOYEE
SET city = 'ddn' WHERE EmpId = '18';

UPDATE EMPLOYEE
SET city = 'Delhi' WHERE EmpId = '11';

