CREATE TABLE EMPLOYEE(
EmpId INT,
Ename VARCHAR(30),
age INT,
salary INT,
phoneNo INT,
DOB date
);

ALTER TABLE EMPLOYEE
ADD PRIMARY KEY (EmpId);

