SELECT MONTHS_BETWEEN(SYSDATE, dob)/12 AS age FROM EMPLOYEE;

ALTER TABLE EMPLOYEE ADD(age INT);

SELECT *FROM EMPLOYEE;
// Age column shows -

UPDATE EMPLOYEE
SET age = ROUND(MONTHS_BETWEEN(SYSDATE, dob)/12);

