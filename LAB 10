CREATE TABLE CUSTOMER(
customer_id INT PRIMARY KEY, 
customer_name VARCHAR(50)
);

CREATE TABLE ITEM(
item_id INT PRIMARY KEY,
item_name VARCHAR(50),
price INT
);

CREATE TABLE SALE(
bill_no INT,
bill_date DATE,
customer_id INT,
item_id INT,
qty_sold INT,
CONSTRAINT one PRIMARY KEY(bill_no),
CONSTRAINT two FOREIGN KEY(customer_id)
REFERENCES CUSTOMER(customer_id)
ON DELETE CASCADE,
CONSTRAINT three FOREIGN KEY(item_id)
REFERENCES ITEM(item_id)
ON DELETE CASCADE
);

