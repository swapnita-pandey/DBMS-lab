a)
SELECT CUSTOMER.customer_name, SALE.item_id FROM CUSTOMER
JOIN SALE ON CUSTOMER.customer_id = SALE.customer_id
WHERE SALE.bill_date = SYSDATE;

d)
SELECT SALE.qty_sold, ITEM.price FROM ITEM
JOIN SALE ON SALE.item_id = ITEM.item_id;

SELECT SUM(price) as amount FROM ITEM;
